{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "isolatedModules": false
  },
  "include": ["vite.config.ts", "hardhat.config.ts", "test/**/*", "scripts/**/*"]
}
